@page "/home"
@model WebApp.Pages.Home

@{
    ViewData["Title"] = "Home";
}

<div class="menu text-center">
    <h1>TIC-TAC-TWO | Main Menu</h1>
    
    <form method="post" asp-page-handler="NewGame" style="display: inline-block; margin: 5px">
        <button type="submit" class="btn btn-primary">New Game</button>
    </form>
    
    <br/>
    
    <form method="post" asp-page-handler="LoadGame" style="display: inline-block; margin: 5px;">
        <button type="submit" class="btn btn-primary">Load Game</button>
    </form>
    
    <br/>

    <form method="post" asp-page-handler="Options" style="display: inline-block; margin: 5px;">
        <button type="submit" class="btn btn-primary">Options</button>
    </form>
</div>